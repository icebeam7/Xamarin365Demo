<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Xamarin365Demo.App">
    <Application.Resources>
        <Style TargetType="Label" x:Key="mainLabel">
            <Setter Property="TextColor" Value="#FFA700"/>
        </Style>

        <Style TargetType="Label" x:Key="subLabel">
            <Setter Property="TextColor" Value="#FAE072"/>
        </Style>

        <Style TargetType="Label" BasedOn="{StaticResource mainLabel}" x:Key="title">
            <Setter Property="FontFamily" Value="MuliBlack"/>
            <Setter Property="FontSize" Value="Large"/>
        </Style>

        <Style TargetType="Label" BasedOn="{StaticResource subLabel}" x:Key="subtitle">
            <Setter Property="FontFamily" Value="MuliRegular"/>
            <Setter Property="FontSize" Value="Small"/>
        </Style>

        <Style TargetType="Label" BasedOn="{StaticResource subLabel}" x:Key="normal">
            <Setter Property="FontFamily" Value="MuliBlack"/>
            <Setter Property="FontSize" Value="Small"/>
        </Style>

        <Style TargetType="Button" x:Key="mainButton">
            <Setter Property="CornerRadius" Value="20"/>
            <Setter Property="BackgroundColor" Value="Green"/>
            <Setter Property="TextColor" Value="White"/>
        </Style>
    </Application.Resources>
</Application>